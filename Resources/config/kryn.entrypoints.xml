        <label>Nodes</label>
        <children>
          <entryPoint path="add" type="custom" multi="true">
            <label>Add pages</label>
          </entryPoint>
          <entryPoint path="addDomains" type="custom" multi="true">
            <label>Add domains</label>
          </entryPoint>
